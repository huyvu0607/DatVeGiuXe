 @{
     Layout = null;
     var currentPage = ViewContext.RouteData.Values["action"]?.ToString();  
 }

 <!DOCTYPE html>
 <html>
 <head>
     <meta charset="utf-8" />
     <title>@ViewData["Title"] - Admin</title>

     <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css" />
     <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css" />
     <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.css" />
    <!-- Toastify CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <!-- Toastify JS -->
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    @RenderSection("Styles", required: false)
 </head>
 <body class="hold-transition sidebar-mini layout-fixed">
     <div class="wrapper">

         <!-- Navbar -->
         <nav class="main-header navbar navbar-expand navbar-white navbar-light">
             <!-- Navbar content -->
             <span class="navbar-brand">
                 <a asp-controller="Home" asp-action="Index">Quay Lai Trang chủ</a>
             </span>
         </nav>

         <!-- Sidebar -->
         <aside class="main-sidebar sidebar-dark-primary elevation-4">
             <a href="#" class="brand-link text-center">
                 <span class="brand-text font-weight-light">Quản trị</span>
             </a>

             <div class="sidebar">
                 <nav class="mt-2">
                     <ul class="nav nav-pills nav-sidebar flex-column" role="menu">
                         <li class="nav-item">
                             <a asp-controller="Admin" asp-action="Dashboard" class="nav-link">
                                 <i class="nav-icon fas fa-tachometer-alt"></i>
                                 <p>Dashboard</p>
                             </a>
                         </li>
                         <li class="nav-item">
                             <a asp-controller="ParkingSlots" asp-action="Index" class="nav-link">
                                 <i class="nav-icon fas fa-parking"></i>
                                 <p>Chỗ giữ xe</p>
                             </a>
                         </li>
                         <li class="nav-item">
                             <a asp-controller="Users" asp-action="Index" class="nav-link">
                                 <i class="nav-icon fas fa-user"></i>
                                 <p>Tài khoản</p>
                             </a>
                         </li>
                         <li class="nav-item">
                             <a asp-controller="Transactions" asp-action="Index" class="nav-link">
                                 <i class="nav-icon fas fa-credit-card"></i>
                                 <p>Thanh toán</p>
                             </a>
                         </li>
                     </ul>
                 </nav>
             </div>
         </aside>

         <!-- Content Wrapper -->
         <div class="content-wrapper p-4">
             <section class="content">
                 <div class="container-fluid">
                     @RenderBody()
                 </div>
             </section>
         </div>

         <!-- Footer -->
         <footer class="main-footer text-center">
             <strong>&copy; 2025 Parking Admin.</strong> All rights reserved.
         </footer>
     </div>

     <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
     <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
     <script src="~/adminlte/dist/js/adminlte.min.js"></script>
    @RenderSection("Scripts", required: false)
  

 </body>
 </html>
