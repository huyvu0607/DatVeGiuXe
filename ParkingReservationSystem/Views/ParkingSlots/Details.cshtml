@model ParkingReservationSystem.Models.ParkingSlot
@{
    ViewData["Title"] = "Chi tiết chỗ đỗ xe";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-1">Chi tiết chỗ đỗ xe</h2>
            <p class="text-muted mb-0">Thông tin chi tiết của chỗ đỗ xe: <strong>@Model.SlotCode</strong></p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Main Information Card -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0 text-primary">
                        <i class="fas fa-info-circle me-2"></i>Thông tin cơ bản
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <!-- Slot Code -->
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-barcode me-2 text-primary"></i>Mã chỗ đỗ xe
                                </label>
                                <div class="info-value">
                                    <span class="badge bg-primary fs-6 px-3 py-2">@Model.SlotCode</span>
                                </div>
                            </div>
                        </div>

                        <!-- Floor -->
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-layer-group me-2 text-primary"></i>Tầng
                                </label>
                                <div class="info-value">
                                    <span class="badge bg-info fs-6 px-3 py-2">Tầng @Model.Floor</span>
                                </div>
                            </div>
                        </div>

                        <!-- Availability Status -->
                        <div class="col-12">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-toggle-on me-2 text-primary"></i>Trạng thái
                                </label>
                                <div class="info-value mt-2">
                                    @if (Model.IsAvailable)
                                    {
                                        <div class="alert alert-success border-0 d-flex align-items-center" style="background-color: #f0fdf4;">
                                            <i class="fas fa-check-circle text-success me-3 fs-5"></i>
                                            <div>
                                                <h6 class="mb-0 text-success">Có sẵn</h6>
                                                <small class="text-success opacity-75">Chỗ đỗ xe này có thể được đặt trước</small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger border-0 d-flex align-items-center" style="background-color: #fef2f2;">
                                            <i class="fas fa-times-circle text-danger me-3 fs-5"></i>
                                            <div>
                                                <h6 class="mb-0 text-danger">Đã được sử dụng</h6>
                                                <small class="text-danger opacity-75">Chỗ đỗ xe này hiện không khả dụng</small>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions & Quick Info -->
        <div class="col-lg-4">
            <!-- Quick Actions Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h6 class="card-title mb-0 text-primary">
                        <i class="fas fa-tools me-2"></i>Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                            <i class="fas fa-edit me-2"></i>Chỉnh sửa thông tin
                        </a>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-2"></i>Xóa chỗ đỗ xe
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>Danh sách tất cả
                        </a>
                    </div>
                </div>
            </div>

            <!-- Additional Info Card -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="card-title mb-0 text-primary">
                        <i class="fas fa-chart-bar me-2"></i>Thống kê
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="stat-item">
                                <i class="fas fa-calendar-check text-primary fs-4"></i>
                                <div class="mt-2">
                                    <div class="fw-bold">ID</div>
                                    <small class="text-muted">#@Model.Id</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item">
                                <i class="fas fa-building text-info fs-4"></i>
                                <div class="mt-2">
                                    <div class="fw-bold">Vị trí</div>
                                    <small class="text-muted">@Model.SlotCode - Tầng @Model.Floor</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title text-danger" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center py-3">
                    <i class="fas fa-trash-alt text-danger mb-3" style="font-size: 3rem; opacity: 0.7;"></i>
                    <h6>Bạn có chắc chắn muốn xóa chỗ đỗ xe này?</h6>
                    <p class="text-muted mb-0">
                        Chỗ đỗ xe <strong>@Model.SlotCode</strong> tại <strong>Tầng @Model.Floor</strong>
                        sẽ bị xóa vĩnh viễn và không thể khôi phục.
                    </p>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Hủy bỏ
                </button>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Xóa ngay
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .info-item {
        padding: 1rem;
        border-radius: 8px;
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        height: 100%;
    }

    .info-label {
        font-weight: 600;
        color: #495057;
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .info-value {
        font-size: 1rem;
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-2px);
    }

    .text-primary {
        color: #4f46e5 !important;
    }

    .btn-warning {
        background-color: #f59e0b;
        border-color: #f59e0b;
        color: white;
    }

    .btn-warning:hover {
        background-color: #d97706;
        border-color: #d97706;
        color: white;
    }

    .stat-item {
        padding: 1rem;
        border-radius: 8px;
        transition: background-color 0.2s;
    }

    .stat-item:hover {
        background-color: #f8f9fa;
    }

    .modal-content {
        border-radius: 12px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }

    .badge {
        border-radius: 6px;
    }
</style>

@section Scripts {
    <script>
        // Add some interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            // Animate cards on load
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
}