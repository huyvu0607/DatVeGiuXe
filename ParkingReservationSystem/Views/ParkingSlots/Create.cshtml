@model ParkingReservationSystem.Models.ParkingSlot
@{
    ViewData["Title"] = "Tạo chỗ đỗ xe mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-1">Tạo chỗ đỗ xe mới</h2>
            <p class="text-muted mb-0">Thêm một chỗ đỗ xe mới vào hệ thống</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>

    <!-- Create Form Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0 text-primary">
                        <i class="fas fa-plus-circle me-2"></i>Thông tin chỗ đỗ xe
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" id="createForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SlotCode" class="form-label fw-semibold">
                                    <i class="fas fa-barcode me-2 text-primary"></i>Mã chỗ đỗ xe
                                </label>
                                <input asp-for="SlotCode" class="form-control form-control-lg"
                                       placeholder="Nhập mã chỗ đỗ xe (VD: A1, B2...)"
                                       style="border-radius: 8px;" />
                                <span asp-validation-for="SlotCode" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Floor" class="form-label fw-semibold">
                                    <i class="fas fa-layer-group me-2 text-primary"></i>Tầng
                                </label>
                                <select asp-for="Floor" class="form-select form-select-lg"
                                        style="border-radius: 8px;">
                                    <option value="">Chọn tầng</option>
                                    <option value="1">Tầng 1</option>
                                    <option value="2">Tầng 2</option>
                                    <option value="3">Tầng 3</option>
                                    <option value="4">Tầng 4</option>
                                    <option value="5">Tầng 5</option>
                                </select>
                                <span asp-validation-for="Floor" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Status Info -->
                        <div class="alert alert-info border-0" style="background-color: #e3f2fd;">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Lưu ý:</strong> Chỗ đỗ xe mới sẽ được tạo với trạng thái "Có sẵn" theo mặc định.
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4" style="border-radius: 8px;">
                                <i class="fas fa-times me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4" style="border-radius: 8px;">
                                <i class="fas fa-plus me-2"></i>Tạo chỗ đỗ xe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-2px);
    }

    .form-control:focus, .form-select:focus {
        border-color: #4f46e5;
        box-shadow: 0 0 0 0.2rem rgba(79, 70, 229, 0.25);
    }

    .btn-primary {
        background-color: #4f46e5;
        border-color: #4f46e5;
    }

    .btn-primary:hover {
        background-color: #4338ca;
        border-color: #4338ca;
    }

    .text-primary {
        color: #4f46e5 !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Auto-generate slot code suggestion
        document.getElementById('Floor').addEventListener('change', function() {
            const floor = this.value;
            const slotCodeInput = document.getElementById('SlotCode');

            if (floor && !slotCodeInput.value) {
                // Simple auto-suggestion logic
                const lastChar = String.fromCharCode(65 + Math.floor(Math.random() * 26)); // A-Z
                const number = Math.floor(Math.random() * 20) + 1;
                slotCodeInput.value = lastChar + number;
            }
        });

        // Form validation enhancement
        document.getElementById('createForm').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang tạo...';
            submitBtn.disabled = true;
        });
    </script>
}