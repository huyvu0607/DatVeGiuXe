@model ParkingReservationSystem.Views.Admin.History.IndexModel


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    // ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].ReservedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].ExpiresAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].IsConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].ParkingSlot)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reservation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiresAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsConfirmed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingSlot.SlotCode)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
