@model ParkingReservationSystem.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .login-title {
        font-weight: bold;
        color: #28a745;
        margin-bottom: 25px;
        text-align: center;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-success {
        width: 100%;
        padding: 10px;
        font-weight: bold;
    }

    .register-link {
        display: block;
        text-align: center;
        margin-top: 15px;
    }
    .a {
        text-decoration: none
    }
</style>

<div class="login-container">
    <h2 class="login-title">Đăng nhập hệ thống</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input name="email" type="email" class="form-control" required placeholder="Nhập email của bạn" />
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input name="password" type="password" class="form-control" required placeholder="Nhập mật khẩu" />
        </div>

        <button type="submit" class="btn btn-success">Đăng nhập</button>
    </form>

    <p class="register-link">
        Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay</a>
    </p>

</div>
