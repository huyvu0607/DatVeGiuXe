@model ParkingReservationSystem.Models.User
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<style>
    .register-container {
        max-width: 450px;
        margin: 80px auto;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .register-title {
        font-weight: bold;
        color: #007bff;
        margin-bottom: 25px;
        text-align: center;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-weight: bold;
    }

    .login-link {
        display: block;
        text-align: center;
        margin-top: 15px;
    }
</style>

<div class="register-container">
    <h2 class="register-title">Tạo tài khoản mới</h2>

    <form asp-action="Register" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Họ tên</label>
            <input asp-for="Name" class="form-control" required placeholder="Nhập họ tên" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" required placeholder="Nhập email" />
        </div>

        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input name="password" type="password" class="form-control" required placeholder="Tạo mật khẩu" />
        </div>

        <button type="submit" class="btn btn-primary">Đăng ký</button>
    </form>

    <p class="login-link">
        Đã có tài khoản? <a asp-action="Login">Đăng nhập</a>
    </p>

</div>
