        Mã chỗ: <span style="color: red; font-weight: bold;">
            @string.Join(", ", Model.Select(res => res.SlotCode))
        </span>
    </p>

    <p>Tên: @Model[0].Name</p>
    <p>Email: @Model[0].Email</p>
